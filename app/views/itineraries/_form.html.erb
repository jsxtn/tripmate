<%# <script>
  var typed = new Typed('#typed', {
    stringsElement: '#typed-strings'
  });
</script>

<div id="typed-strings">
  <p>Typed.js is a <strong>JavaScript</strong> library.</p>
  <p>It <em>types</em> out sentences.</p>
</div>
<span id="typed"></span> %>


<div data-controller="questions">
  <%= simple_form_for(@itinerary, html: { data: { 'questions-target': 'form' } }) do |f| %>
    <div>
      <span data-questions-target="question" data-strings="<%= ["Where do you want to go?"] %>">
      </span>
      <%= f.input :answer1, label: false, input_html: { data: { action: 'keydown.enter->questions#next' } } %>
    </div>

    <div>
      <span data-questions-target="question" data-strings="<%= ["Please enter start date you want to go."] %>">
      </span>
      <%= f.input :start_date, as: :string, label: false, wrapper_html: { class: 'd-none input-wrapper' }, input_html: { data: { action: 'keydown.enter->questions#next' } } %>
    </div>

    <div>
      <span data-questions-target="question" data-strings="<%= ["Please enter end date you want to go."] %>">
      </span>
      <%= f.input :end_date, as: :string, label: false, wrapper_html: { class: 'd-none input-wrapper' }, input_html: { data: { action: 'keydown.enter->questions#next' } } %>
    </div>

    <div>
      <span data-questions-target="question" data-strings="<%= ["What cities do you want to visit?"] %>">
        <%# <p>What cities do you want to visit?</p> %>
      </span>
      <%= f.input :answer3, label: false, wrapper_html: { class: 'd-none input-wrapper' }, input_html: { data: { action: 'keydown.enter->questions#next' } } %>
    </div>

    <div>
      <span data-questions-target="question" data-strings="<%= ["What type of activities do you like to do?  E.g. sightseeing, nightclubs, beaches etc"] %>">
        <%# <p>What type of activities do you like to do?  E.g. sightseeing, nightclubs, beaches etc</p> %>
      </span>
      <%= f.input :answer4, label: false, wrapper_html: { class: 'd-none input-wrapper' }, input_html: { data: { action: 'keydown.enter->questions#next' } }  %>
    </div>

    <div>
      <span data-questions-target="question" data-strings="<%= ["What type of cuisine preferences do you have?  Are there any dietary preferences/requirements to consider?"] %>">
        <%# <p>What type of cuisine preferences do you have?  Are there any dietary preferences/requirements to consider?</p> %>
      </span>
      <%= f.input :answer5, label: false, wrapper_html: { class: 'd-none input-wrapper' }, input_html: { data: { action: 'keydown.enter->questions#next' } } %>
    </div>

    <div>
      <span data-questions-target="question" data-strings="<%= ["Do you or anyone in your travelling group have any accessibility requirements?"] %>">
        <%# <p>Do you or anyone in your travelling group have any accessibility requirements?</p> %>
      </span>
      <%= f.input :answer6, label: false, wrapper_html: { class: 'd-none input-wrapper' }, input_html: { data: { action: 'keydown.enter->questions#next' } }  %>
    </div>

    <%= f.submit "Create Itinerary", class: "btn btn-tripmate-black my-2 lg-5 d-none", data: { 'questions-target': 'button' } %>
  <% end %>
</div>
