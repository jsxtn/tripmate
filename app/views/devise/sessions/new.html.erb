<section>
  <div class="video-overlay-form"></div>
    <video autoplay muted loop id="myVideo">
      <source src="https://videos.pexels.com/video-files/11043265/11043265-hd_1080_1920_30fps.mp4">
      <%# <source src="https://res.cloudinary.com/dopxbkgda/video/upload/v1715892183/3121459-uhd_2560_1440_24fps_ztatny.mp4" type="video/mp4"> %>
    </video>
</section>

<div class = "user-form-center-lgn container-xxl d-flex align-items-center py-3">
  <div class = "container-xxl d-flex column justify-content-center">
    <%# <h2>Log in</h2> %>


    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs card p-3">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class= "form-actions">
        <%= f.button :submit, "LOG IN", class: "btn-register border-3 rounded-3 col-12 mt-3 pt-3 pb-3 fs-6" %>
      </div>
    <% end %>

    <%# <%= render "devise/shared/links" %>
  </div>
</div>
